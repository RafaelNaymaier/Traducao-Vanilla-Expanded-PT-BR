<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Races Expanded - Sanguophage</li>
      <li>vanillaracesexpanded.sanguophage</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        
        <li Class="PatchOperationReplace"> 
          <xpath>Defs/ThingDef[defName="VRE_HemogenPack_Corpse"]/label</xpath>
          <value>
            <label>pacote de hemogênio (cadáver)</label>     
          </value>
        </li>
        
        <li Class="PatchOperationReplace"> 
          <xpath>Defs/ThingDef[defName="VRE_HemogenPack_Corpse"]/description</xpath>
          <value>
            <description>Hemogênio contaminado e em decomposição, extraído de um cadáver. Enfraquece drasticamente o portador deste tipo de hemogênio, mas aumenta significativamente sua capacidade de filtragem sanguínea.</description>     
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/PipeSystem.PipeNetDef[defName="VRE_HemogenNet"]/resource</xpath>
          <value>
            <resource>
              <name>Hemogênio</name>
              <unit>pacotes</unit>
              <color>(109, 37, 39)</color>
              <onlyShowStored>True</onlyShowStored>
              <offTexPath>Things/Item/Resource/HemogenPack/HemogenPack_c</offTexPath>
            </resource>
          </value>
        </li>

      </operations>
    </match>
  </Operation>
</Patch>