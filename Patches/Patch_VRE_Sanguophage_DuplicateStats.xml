<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>vanillaracesexpanded.sanguophage</li>
      <li>Vanilla Races Expanded - Sanguophage</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace"> 
          <xpath>/Defs/ThingDef[defName="VRE_HemogenPack_Corpse"]/label</xpath>
          <value>
            <label>pacote de hemogênio (cadáver)</label>     
          </value>
        </li>
        <li Class="PatchOperationReplace"> 
          <xpath>/Defs/ThingDef[defName="VRE_HemogenPack_Corpse"]/description</xpath>
          <value>
            <description>Hemogênio contaminado e em decomposição, extraído de um cadáver. Enfraquece drasticamente o portador deste tipo de hemogênio, mas aumenta significativamente sua capacidade de filtragem sanguínea.</description>     
          </value>
        </li>
      </operations>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>vanillaexpanded.gravship</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="ChemfuelTank"]/label</xpath>
          <value>
            <label>Tanque pequeno de astrocombustível</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="ChemfuelTank"]/description</xpath>
          <value>
            <description>Um tanque de armazenamento de astrocombustível que fornece combustível para os propulsores de uma gravinave.</description>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="LargeChemfuelTank"]/label</xpath>
          <value>
            <label>Tanque grande de astrocombustível</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="LargeChemfuelTank"]/description</xpath>
          <value>
            <description>Um enorme tanque de armazenamento de astrocombustível que fornece combustível para os propulsores de uma gravinave.</description>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>